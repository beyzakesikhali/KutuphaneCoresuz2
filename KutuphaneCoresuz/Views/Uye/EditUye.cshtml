@model  List<KutuphaneCoresuz.Models.Data.Uye>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Partial("~/Views/Shared/_HeaderUye.cshtml")

<div id="logo" class="pull-left" align="center">


    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <h4>Uye Düzenle</h4>
        <h4>Şifrenizi Yazmayı Unutmayın</h4>
        <hr />
        @using (Html.BeginForm("PostEditUye", "Uye", FormMethod.Post))
        {
            foreach (var item in Model)
            {


                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Hidden("id:", item.ID, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("İsim", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Adı:", item.isim, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("KullaniciAdi", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Kullanici Adi", item.KullaniciAdi, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Soyisim", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Soyisim:", item.Soyisim, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                @*<div class="form-group">
                        @Html.Label("Rol", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(item => item.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(item => item.Sifre, "", new { @class = "text-danger" })
                        </div>
                    </div>*@


                <div class="form-group">
                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Email:", item.Email, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Şifre", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Password("Sifre:", item.Sifre, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Açıklama", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Açıklama", item.Aciklama, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="Kaydet" class="btn btn-danger">Değiştir</button>
                    </div>
                </div>

            }
        }

        @*//modal*@
        @* !!!! buraya modal koyacaksın!!!!!*@

        <div class="col-md-offset-2 col-md-10">
            <button class="btn-outline-warning btn-popup" value="Yazar Yoksa Tıklayın" data-toggle="modal" data-target="#exampleModalCenter">Rol Değiştir</button>
        </div>
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Yazar Ekle</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">

                            <form id="tag-form" class="tagForm" method="post">
                                @foreach (var item in Model)
                                {
                                    @Html.Label("Kullanıcı Adı:", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" name="@Html.Name(item.isim)">

                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Şifre:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" name="@Html.Name(item.Sifre)">

                                        </div>
                                    </div>
                                }
                            </form>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            <button type="button" class="btn btn-primary" id="btn-editrole">Yazar Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <button class="btn-outline-secondary" type="button" name="DetailsUye" onclick="location.href='@Url.Action("UyeAnasayfasi", "Security")'">AnaSayfaya Dön</button>
</div>


@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#btn-editrole").click(function () {
 //"aciklama":  $(this).data("aciklama"), "roleid":  $(this).data("roleid") } ),
                   //data: { "id": id, "isim": isim, "kullaniciadi": kullaniciadi, "soyisim": soyisim, "aciklama": aciklama, "roleid": roleid },                alert("butona tıklandı");
                    $.ajax({
                            url: '@Url.Action("AdminKontrol","Uye")',
                            method: "POST",
                            dataType:"json",
                            data: $('form.tagForm').serialize(),
                        success: function (sayfa) {
                            if (sayfa.text == 1) {

                                $(location).attr('href', '@Url.Action("RolEdit","Uye")');

                            }
                            else {
                                alert("Yanlış Kullanıcı Adı ve Şifre");
                            }



                        },
                        error: function () {
                            alert("Hata");
                        }

            });
        }
    </script>

}

