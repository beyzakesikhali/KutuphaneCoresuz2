@model IEnumerable<KutuphaneCoresuz.Models.Data.Yazar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div id="header">
    <div class="container">

        <div id="logo" class="pull-left">

            <h2>Yazarlar</h2>

            <p>
                |  <button class="btn-outline-success" type="button" name="DetailsUye" onclick="location.href='@Url.Action("CreateYazar","Yazar")'">YENİ BİR YAZAR EKLE</button> |
            </p>
            <table class="table">
                <tr>
                    <th>
                       -İsim-
                    </th>
                    <th>
                       -Soyisim-
                    </th>
                    <th>
                      -Yorum-
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Soyisim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Yorum)
                        </td>

                        <td>
                          |  <button class="btn-outline-success" type="button" name="DetailsUye" onclick="location.href='@Url.Action("EditYazar","Yazar")'">YAZARI DÜZENLE</button> 
                          |  <button class="btn-outline-success" type="button" name="DetailsUye" onclick="location.href='@Url.Action("DeleteYazar","Yazar")'">YAZARI SİL</button> 
                          |  <button class="btn-outline-success" type="button" name="DetailsUye" onclick="location.href='@Url.Action("DetailsYazar","Yazar")'">YAZAR DETAY</button>|
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
