                            </div>
                        </div>
                    </div>

                    @*<select class="form-control" id="ad" style="width:200px; position:absolute; left:660px; bottom:3px" name=@Html.NameFor(m => m.YazarAdi)>
                            <option>Yazar Adı Seçiniz</option>
                        </select>*@
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Yayıncı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="@Html.NameFor(m => m.yayinci)">

            </div>
        </div>

        <div class="form-group">
            @Html.Label("Açıklama", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name=@Html.NameFor(m => m.Aciklama)>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kitap Durum", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="durum" style="width:200px; position:absolute; left:660px; bottom:3px" name=@Html.NameFor(m => m.KitapDurum)>
                    <option>Kutuphanede</option>
                    <option>Uyede</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" style="width:300px"  class="btn btn-warning">Kaydet</button>
            </div>
        </div>

    }

    <button class="btn-outline-warning btn-duzenle" type="submit" onclick='@Url.Action("IndexKitap","Kitap")'>Tüm Kitaplar</button>

    <button class="btn-outline-warning btn-uyeEkle" type="submit" onclick='@Url.Action("AddUyeAdmin","Admin")'>Uye Ekle</button>



</div>    

@section Scripts
    {


    <script type="text/javascript">

        $(document).ready(function()
        {
            GetNames();
            GetUyeNames();

            var btn = document.getElementById("#btn-yazarekle");
            var modal = document.getElementById("#mymodal");
            var ad = document.getElementById("#ad");
                $("#btn-yazarekle").click(function()
                {
                    //alert("butona tıklandı");

                         $.ajax({
                            url: '@Url.Action("CreateYazar","Yazar")',
                            method: "POST",
                            dataType:"json",
                            data: $('form.tagForm').serialize(),
                             success: function (sayfa) {

                                 //alert(sayfa.text);
                                if (sayfa.text == 0) {

                                    window.location.href = '@Url.Action("Login","Security")';
                                }
                                else if (sayfa.text == 1)
                                {
                                    $("#mymodal").modal('hide');

                                        GetNames();


                                }
                                        else if (sayfa.text == 2) {
                                    window.location.href = '@Url.Action("CreateYazarAction","Yazar")';
                                        }
                            },
                            error: function() {
                                alert('Error');
                            }
                        });//ajax sonu
                        //return false;

                });//click sonu

            //  modal.on('hidden', function ()
            //{
            //    GetNames();
            //    ad.change(function(){
            //        window.location.reload(true);
            //    });



            //});//modal on sonu
        });//document.ready sonu
        function GetNames() {

            $.ajax({
                url: `/Kitap/AdSoyad?id=0`,
                method: "post",
                dataType: "json",
                success: function (data) {

                    $.each(data.text, function (key, yazarDetaylari) {
                        $("#inputGroupSelect03").append(`<option value="${yazarDetaylari["Value"]}">${yazarDetaylari["Text"]}</option>`);
                        //ad.append(`<option value="${yazarDetaylari["Value"]}">${yazarDetaylari["Text"]}</option>`);

                    });
                }, complete: function () {

                }
            });
        }
 function GetUyeNames()
 {
     //alert("fonksiyon");
        $.ajax({
         url: `/Admin/UyeAdSoyad?id=0`,
        method: "post",
        dataType: "json",
        success: function (data)
            {

                $.each(data.text, function (key, uyeDetaylari) {
                $("#uyeAd").append(`<option value="${uyeDetaylari["Value"]}">${uyeDetaylari["Text"]}</option>`);
                //ad.append(`<option value="${yazarDetaylari["Value"]}">${yazarDetaylari["Text"]}</option>`);

            });
            },
            complete: function () {

            }
       });//ajax sonu

}

    </script>
}
