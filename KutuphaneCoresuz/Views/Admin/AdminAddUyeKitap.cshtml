                                                    <input type="text" class="form-control" name="yazarsoyadi">

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.Label("Yazar Yorumu:", htmlAttributes: new { @class = "control-label col-md-2" })
