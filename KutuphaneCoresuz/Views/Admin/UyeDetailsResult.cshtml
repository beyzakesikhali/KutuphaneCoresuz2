@model List<KutuphaneCoresuz.Models.ModelforDB.KitapUyeViewModel>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "anasayfa";

}

@Html.Partial("~/Views/Shared/_HeaderAdmin.cshtml")


<span class="border-dark border-bottom">
    <h4 style="font-family:fantasy; color:	#01579B; padding-left:20px">Projeye Hoşgeldiniz @Context.Session["KullaniciAdi"].ToString() </h4>
</span>
<h3 align="center">Üye Detay</h3>

<table class="table-responsive" align="center" style="width:70%; height:750px" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th>
                @Html.Label("Uye İsim:")
            </th>
            <th>
                @Html.Label("Kullanici Adi:")
            </th>
            <th>
                @Html.Label("Rol:")

            </th>
            <th>
                @Html.Label("Uye Soyisim:")
            </th>

            <th>
                @Html.Label("Uye Email")
            </th>

            <th>
                @Html.Label("Açıklama:")
            </th>
            <th>
                @Html.Label("Kitap Durum:")
            </th>
            <th>
                @Html.Label("Kitap Adi:")
            </th>
            <th>
                @Html.Label("Yayinci:")
            </th>
            <th>
                @Html.Label("Yazar Adi:")
            </th>
            <th>
                @Html.Label("Yazar Soyadi:")

            </th>

            <th>
                @Html.Label("Yorum:")
            </th>

            <th colspan="2">
                İşlemler
            </th>

        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            
            foreach (var item in Model)
            {

        <tr>

            <td>
                @item.UyeIsim
            </td>
            <td>
                @item.KullaniciAdi
            </td>
            <td>
                @item.Role
            </td>
            <td>
                @item.UyeSoyisim
            </td>
            <td>
                @item.UyeEmail
            </td>
            <td>

                @item.Aciklama
            </td>
            <td>

                @item.KitapDurum
            </td>
            <td>
                @item.KitapAdi
            </td>
            <td>
                @item.yayinci
            </td>
            <td>
                @item.YazarAdi
            </td>
            <td>
                @item.YazarSoyadi
            </td>

            <td>
                @item.YazarYorum
            </td>
            @if (item.KitapAdi != "Kayıtlı Kitabınız Yok")
            {
                <td colspan="2">
                    <button type="submit" class="btn-outline-info btn-duzenle" data-id=@item.id data-kullaniciadi="@item.KullaniciAdi" data-uyeisim="@item.UyeIsim" data-kitapadi="@item.KitapAdi" data-kitapdurum="@item.KitapDurum">Üyenin Kitabını Düzenle</button>
                </td>
            }
            else
            {
                <td colspan="2">
                    <button type="submit" class="btn-outline-info btn-duzenle" data-id=@item.id data-kullaniciadi="@item.KullaniciAdi" data-uyeisim="@item.UyeIsim" data-kitapadi="@item.KitapAdi" data-kitapdurum="@item.KitapDurum" onclick="location.href='/Admin/AdminAddUyeKitap?id=@item.id'">Üyeye Kitap Ekle</button>
                </td>
            }


        </tr>

            }

        }
    </tbody>
</table>

<br />
<br />




@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".btn-duzenle").click(function () {
                alert("butona tıklandı");
                var id = $(this).data("id");
               alert(id);
               
                //alert(isim);}&kullaniciadi=${kullaniciadi}&uyeisim=${uyeisim}&kitapadi=${kitapadi}&kitapdurum=${kitapdurum}
                //var kullaniciadi = $(this).data("kullaniciadi").val();

                //var uyeisim = $(this).data("uyeisim").val();
                //var kitapadi = $(this).data("kitapadi").val();
                //var kitapdurum = $(this).data("kitapdurum").val();

                $.ajax({
                   url: `/Admin/AdminEditUyeKitapJson?id=${id}`,
                    @*url:'@Url.Action("EditYazarId","Yazar")',*@
                    method: "post",
                    dataType: "json",
                   // data: {id:yazarID, isim:isim, soyisim:soyisim, yorum:yorum},
                    success: function (data) {
                         if (data.text == "login") {
                                window.location.href = `/Security/Login`;

                            }
                            else if (data.text == "editKitap") {

                                window.location.href = `/Admin/AdminEditUyeKitapResult?id=${id}`;
                                //&isim=${isim}&kullaniciadi=${kullaniciAdi}&soyisim=${soyisim}&email=${email}&aciklama=${aciklama}&roleid=${role}
                         }
                         else if (data.text == "createkitap")
                         {
                             window.location.href=`/Admin/AdminAddUyeKitap?id=${id}`
                         }
                            else {
                                alert("hata");
                            }

                            //alert("gitmelisin")
                            //}, complete: function () {
                            //    alert("Olmadı!")

                    },
                    complete: function () {

                    }
                });
            })

        });

       

    </script>


}
