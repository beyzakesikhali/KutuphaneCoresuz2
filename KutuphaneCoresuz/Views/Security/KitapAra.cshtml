@model IEnumerable<KutuphaneCoresuz.Models.Data.Kitap>
@{
    ViewBag.Title = "KitapAra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Views/Shared/_HeaderUye.cshtml")

<h2>KitapAra</h2>

@{
    WebGrid webgrid = new WebGrid(source: Model, canPage: true, canSort: true, selectionFieldName: "selectedRow", fieldNamePrefix: "gridItem");

}
<br />
<br />
<br />
<br />
@using (Html.BeginForm("Arama", "Kitap", FormMethod.Post, new { @class = "form-inline md-form form-sm mt-0" }))
{

    <i class="fas fa-search" aria-hidden="true" style="position:absolute; right:5px; top:50px;"> Arama Yap</i>
    <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
           aria-label="Search"  style="position:absolute; right:5px; top:50px;">
    <button class="btn aqua-gradient btn-rounded btn-sm my-0" type="submit"  style="position:absolute; right:5px; top:70px;">Search</button>

}
<br />
<br />


@webgrid.GetHtml(

        tableStyle: "webgrid",
               
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
        
    htmlAttributes: new { @id = "webgrid" },
    columns: webgrid.Columns(
        //webgrid.Column("ID","Id"),
        webgrid.Column("isim", "isim"),
         webgrid.Column("Yayinci", "Yayinci"),
         webgrid.Column("Aciklama", "Aciklama"),
         webgrid.Column("KitapDurum", "KitapDurum")

        )

    )
