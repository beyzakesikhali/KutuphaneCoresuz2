@model IEnumerable<KutuphaneCoresuz.Models.ModelforDB.KitapYazarAddModel>
@{
    ViewBag.Title = "Index";

}

@{
    Layout = "~/Views/_Layout.cshtml";
}
<h2>Index</h2>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">

@section Header{

    <div id="header">
        <div class="container">

            <div id="logo" class="pull-left">
                <p>
                    @Html.ActionLink("Create New", "CreateKitap")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.KitapAdi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.YazarAdi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.YazarSoyadi)
                        </th>
