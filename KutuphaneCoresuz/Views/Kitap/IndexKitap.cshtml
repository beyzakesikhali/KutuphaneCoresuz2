                            @Html.DisplayNameFor(model => model.yayinci)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Aciklama)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.KitapAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YazarAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YazarSoyadi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.yayinci)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aciklama)
                            </td>

                            <td>
                                @*@Html.ActionLink("Edit", "EditKitap", new { id = item.kitapID }) |
                                    @Html.ActionLink("Details", "DetailsKitap", new { id = item.kitapID }) |
                                    @Html.ActionLink("Delete", "DeleteKitap", new { id = item.kitapID })*@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
